
<div class="form-group container">
<h3>Create Product </h3>
<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :product_name %> <br>
    <%= form.text_field :product_name%>
  </div>
  <div>
    <%= form.label :product_description %> <br>
    <%= form.text_field :product_description %>
  </div>
  <div>
    <%= form.label :product_price %> <br>
    <%= form.text_field :product_price %>
  </div>



  <div>
    <%= form.submit "Submit", class: "btn btn-warning mt-2"  %>
  </div>



<% end %>


